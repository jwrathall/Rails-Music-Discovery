<div class="form-error">
  <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
          <span class="highlight"><%=msg%></span> <br/>
        <% end %>
  <%end%>
</div>
<div class="form-group">
  <%=f.label(:username, 'Email', class: 'label')%>
  <%=f.text_field(:username, class:'topcoat-text-input')%>
</div>
<div class='form-group'>
  <%=f.label(:password, 'Password', class: 'label')%>
  <%= f.password_field(:password, class:'topcoat-text-input')%>
</div>

