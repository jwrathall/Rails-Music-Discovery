<div class="form-error">
  <% if @user.errors.any? %>
      <ul class="user-error-list">
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
  <%end%>
</div>
<div class="form-group">
  <%=f.label(:username, 'email', class: 'label')%>
  <%=f.text_field(:username, class:'topcoat-text-input')%>
</div>
<div class='form-group'>
  <%=f.label(:password, 'password', class: 'label')%>
  <%= f.text_field(:password, class:'topcoat-text-input')%>
</div>

