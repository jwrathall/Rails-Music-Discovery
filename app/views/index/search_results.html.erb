<%=debug(current_user)%>
<div class="container">
  <%= render 'layouts/jumbotron' %>
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <%= render 'form' %>
    </div>
  </div>
  <div class="row" ng-controller="searchResultsController">
    <div class="col-lg-12 col-xs-12">
    <% @output.each_with_index do |page, index| %>
        <div class='well well-lg'>
          <div class="row">
            <div class="col-md-1 col-sm-1">
              <save-artist event="saveArtist(<%=page.to_json%>)"></save-artist>
            </div>
            <div class="col-md-9 col-sm-9 col-xs-12">
              <div>
                  <p class="highlight"><%= page.artist_type%></p>
                  <%= link_to releases_path({:id => page.mbid}) do%>
                      <div style="width:auto; float:left;">
                        <p class="name-lg"><%= page.name%></p>
                      </div>
                      <div class='icomatic' style="float:left; display:inline;font-size:20px; margin:10px 0 0 10px;"><span>search</span></div>
                  <%end%>
              </div>
              <div>
                <%unless page.area_name.empty? && page.country_name.empty?%>
                    <p class="highlight"><%= page.area_name%> <%= page.country_name%></p>
                <%end%>
                <%unless page.description.empty?%>
                    <p> <%= page.description%></p>
                <%end%>
                <%unless page.genre_attribute == '' %>
                    <%@genres = page.genre_attribute[0,5]%>
                    <%@genres.each_with_index do |g, i|%>
                        <%=g%> <%=', ' unless i == @genres.length-1%>
                    <%end%>
                <%end%>
              </div>
            </div>
            <div class="col-md-2 col-sm-3 col-xs-12">
                <div>score</div>
                <span class="topcoat-notification"><%=page.relevance%></span>
            </div>
          </div>
        </div>
    <% end %>
    </div>
  </div>
 </div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

